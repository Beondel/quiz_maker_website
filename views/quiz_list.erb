<!DOCTYPE html>
<html>
 <head>
  <meta charset="UTF-8">
   <link rel="stylesheet" type="text/css" href="style.css">
  <title>quiz list</title>
 </head>
 <body>
   <center>
   <br>
     <form method="POST" action="quiz">
       <table style="width:50%">
         <%if @quiz_created%>
         <tr>
           <td>
             <input type="radio" name='quiz_selection' id='rad<%=@quiz_name%>'  value='<%=@quiz_name%>' >
             <label for='rad<%=@quiz_name%>' id = "selectbutton"  ><%=@quiz_name%>: <%=@quiz_description%></label>
           </td>
         </tr>
         <%end%>
           <%for i in $quizzes%>
             <tr>
               <td>
                 <input type="radio" name='quiz_selection' id='rad<%=i.name%>'  value='<%=i.name%>' >
                 <label for='rad<%=i.name%>' id = "selectbutton"  ><%=i.name%>: <%=i.description%></label>
               </td>
             </tr>
           <%end%>
         </table>
       <br>
       <%if @quiz_created%>
       <input type="hidden" name="name" value="<%=@quiz_name%>">
       <input type="hidden" name="description" value="<%=@quiz_description%>">
       <input type="hidden" name="answers" value="<%=@answers%>">
       <%end%>
     <input id="smallbutton" type="submit" value="Take Quiz">
   </form>
   </center>
 </body>
</html>