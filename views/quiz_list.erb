<!DOCTYPE html>
<html>
 <head>
  <meta charset="UTF-8">
   <link rel="stylesheet" type="text/css" href="style.css">
  <title>L U S O R</title>
 </head>
 <body>
   <center>
   <br>
     <form method="POST" action="quiz" autocomplete="off">
       <table style="width:50%">
         <%for i in $user_quizzes%>
         <tr>
           <td>
             <input type="radio" name='quiz_selection' id='rad<%=i.name%>'  value='<%=i.name%>' >
             <label for='rad<%=i.name%>' id = "selectbutton"  ><%=i.name%>: <%=i.description%></label>
           </td>
         </tr>
         <%end%>
         <%for i in $quizzes%>
             <tr>
               <td>
                 <input type="radio" name='quiz_selection' id='rad<%=i.name%>'  value='<%=i.name%>' >
                 <label for='rad<%=i.name%>' id = "selectbutton"  ><%=i.name%>: <%=i.description%></label>
               </td>
             </tr>
           <%end%>
         </table>
       <br>
       <%for i in 0...$user_quizzes.length%>
       <input type="hidden" name="user_quiz_name_<%=i%>" value="<%=$user_quizzes[i].name%>">
       <input type="hidden" name="user_quiz_description_<%=i%>" value="<%=$user_quizzes[i].description%>">
       <input type="hidden" name="user_quiz_answers_<%=i%>" value="<%=$user_quizzes[i].answers_list.join(", ")%>">
       <%end%>
     <input id="smallbutton" type="submit" value="Take Quiz">
   </form>
   </center>
 </body>
</html>